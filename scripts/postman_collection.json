{
    "info": {
        "name": "Cats vs Dogs API",
        "_postman_id": "cats-dogs-api-collection",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://34.136.91.60"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status 200', () => pm.response.to.have.status(200));",
                            "pm.test('Model loaded', () => {",
                            "  const body = pm.response.json();",
                            "  pm.expect(body.model_loaded).to.be.true;",
                            "  pm.expect(body.status).to.eql('healthy');",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Predict - Cat Image",
            "request": {
                "method": "POST",
                "url": {
                    "raw": "{{base_url}}/predict",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "predict"
                    ]
                },
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "file",
                            "type": "file",
                            "src": "Cat/0.jpg"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status 200', () => pm.response.to.have.status(200));",
                            "pm.test('Has prediction fields', () => {",
                            "  const body = pm.response.json();",
                            "  pm.expect(body).to.have.property('label');",
                            "  pm.expect(body).to.have.property('confidence');",
                            "  pm.expect(body).to.have.property('probabilities');",
                            "  pm.expect(body.label).to.be.oneOf(['cat', 'dog']);",
                            "  pm.expect(body.confidence).to.be.above(0);",
                            "});",
                            "pm.test('Response time < 5s', () => pm.expect(pm.response.responseTime).to.be.below(5000));"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Predict - Dog Image",
            "request": {
                "method": "POST",
                "url": {
                    "raw": "{{base_url}}/predict",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "predict"
                    ]
                },
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "file",
                            "type": "file",
                            "src": "Dog/0.jpg"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status 200', () => pm.response.to.have.status(200));",
                            "pm.test('Has prediction fields', () => {",
                            "  const body = pm.response.json();",
                            "  pm.expect(body).to.have.property('label');",
                            "  pm.expect(body).to.have.property('confidence');",
                            "  pm.expect(body).to.have.property('probabilities');",
                            "});",
                            "pm.test('Response time < 5s', () => pm.expect(pm.response.responseTime).to.be.below(5000));"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Metrics",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/metrics",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "metrics"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status 200', () => pm.response.to.have.status(200));",
                            "pm.test('Has custom metrics', () => {",
                            "  pm.expect(pm.response.text()).to.include('cats_dogs_requests_total');",
                            "  pm.expect(pm.response.text()).to.include('cats_dogs_predictions_total');",
                            "});"
                        ]
                    }
                }
            ]
        }
    ]
}